<div class="col-md-12">
  <h2><%= @job.title %></h2>

  <table class="table">
    <thead>
      <tr>
        <td>Content</td>
        <td>Wage Upper Bound</td>
        <td>Wage Lower Bound</td>
        <td>Contact</td>
        <td>Resumes Quantity</td>
      </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= simple_format(@job.description) %></td>
      <td><%= @job.wage_upper_bound %></td>
      <td><%= @job.wage_lower_bound %></td>
      <td><%= @job.contact_email %></td>
      <td><%= @job.resumes.count %></td>
    </tr>
  </tbody>
  </table>

  <br><br>
  <%= link_to("Apply", new_job_resume_path(@job), class: "btn btn-primary")%>
</div>
